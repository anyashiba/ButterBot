#include <Servo.h>

Servo myServo;

const int trigPin = 8;
const int echoPin = 9;
const int servoPin = 5;

long duration;
int distance;

bool at115 = false;   // track current state

void setup() {
  Serial.begin(9600);

  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);

  myServo.attach(servoPin);
  myServo.write(55); // start at 55Â°
}

int getDistance() {
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);

  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2; // convert to cm

  return distance;
}

void loop() {
  int d = getDistance();
  Serial.println(d);

  bool objectDetected = (d > 0 && d < 20);

  if (objectDetected && !at115) {
    delay(2500);             // wait before action
    myServo.write(115);
    at115 = true;
  }

  if (!objectDetected && at115) {
    myServo.write(55);
    at115 = false;
  }

  delay(100);
}
